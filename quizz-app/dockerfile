# Build stage
FROM node:24-alpine AS build
WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .

# ðŸ”¥ REQUIRED for Prisma
RUN npx prisma generate

# Build Next.js
RUN npm run build

# Runtime stage
FROM node:24-alpine
WORKDIR /app

COPY --from=build /app ./

EXPOSE 3000
CMD ["npm", "run", "start"]
